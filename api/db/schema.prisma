datasource DS {
  // optionally set multiple providers
  // example: provider = ["sqlite", "postgresql"]
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Task {
  id    Int     @id @default(autoincrement())
  name  String @unique
  description String
  date DateTime @default(now())
}

